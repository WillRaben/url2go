<div class="jumbotron h-auto mh-25 p-2">
  <div class="container-fluid">
    <div class="row">
      <div class="col-1">
        <%= link_to 'Home', "/" , class: "btn btn-dark my-2 mr-0"%>
      </div>
      <div class="col-11">
        <h1 class="text-center pr-5">Link Rankings</h1>
      </div>
    </div>
  </div>
</div>
<div class="jumbotron p-2">
<table class="table table-striped table-hover table-borderless p-2 ml-3 mr-2">
  <thead>
    <tr>
      <th scope="col" class="text-center">Rank</th>
      <th scope="col">Title</th>
      <th scope="col">URL</th>
      <th scope="col" class="text-center">Requests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @top_hits.each.with_index(1) do |top_hit , ranking| %>
      <tr>
        <th scope="row" class="text-center"><%= ranking %></th>
        <td><%= top_hit.title.to_s %></td>
        <td><%= link_to URI.parse(request.original_url()).host+'/'+top_hit.short_url , root_path + top_hit.short_url %></td>
        <td class="text-center"><%= top_hit.hits %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Home', "/" , class: "btn btn-dark ml-3 mb-2"%>
</div>